{
    "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
    "version": 2,
    "final_space": true,
    "blocks": [
        {
            "type": "prompt",
            "alignment": "left",
            "segments": [
                {
                    "type": "os",
                    "style": "plain",
                    "foreground": "#0f94d2",
                    "template": "{{.Icon}} ",
                    "properties": {
                        "macos": "mac"
                    }
                },
                {
                    "type": "session",
                    "style": "plain",
                    "foreground": "#26C6DA",
                    "foreground_templates":[
                        "{{ if eq .UserName 'root' }}#f1184c{{ end }}"
                    ],   
                    "template": "[{{ .UserName }}@{{ .HostName }}]"
                },
                {
                    "type": "battery",
                    "style": "plain",
                    "foreground": "#193549",
                    "foreground_templates": [
                        "{{if eq \"Charging\" .State.String}}#00D100{{end}}",
                        "{{if eq \"Discharging\" .State.String}}#FFCD58{{end}}",
                        "{{if eq \"Full\" .State.String}}#0476d0{{end}}"
                    ],
                    "template": "[{{ if not .Error }}{{ .Icon }}{{ .Percentage }}{{ end }}{{ .Error }}]"
                },
                {
                    "type": "path",
                    "style": "plain",
                    "foreground": "#00dddd",
                    "template": "[\ue5ff {{ .Path }}]",
                    "properties": {
                        "style": "folder"
                    }
                },
                {
                    "type": "git",
                    "style": "plain",
                    "foreground": "#ffffff",
                    "template": "[{{ .UpstreamIcon }}{{ .HEAD }}{{ if gt .StashCount 0 }} \ueb4b {{ .StashCount }}{{ end }}]",
                    "properties": {
                        "fetch_stash_count": true,
                        "fetch_upstream_icon": true
                    }
                },
                {
                    "type": "node",
                    "style": "plain",
                    "foreground": "#ffffff",
                    "template": "[{{ if .PackageManagerIcon }}{{ .PackageManagerIcon }} {{ end }}{{ .Full }}]"
                },
                {
                    "type": "root",
                    "style": "plain",
                    "foreground": "#f1184c",
                    "template": " \uf0e7 "
                },
                {
                    "type": "status",
                    "style": "plain",
                    "foreground": "#ffffff",
                    "foreground_templates": [
                        "{{ if eq .Code 0 }}#abe9b3{{ end }}",
                        "{{ if gt .Code 0 }}#f1184c{{ end }}"
                    ],
                    "template": "[{{ if eq .Code 0 }}\udb82\udc55{{ end }}{{ if gt .Code 0 }} {{ .Code }}{{ end }}]",
                    "properties": {
                        "always_enabled": true
                    }
                }
            ]
        },
        {
            "type": "prompt",
            "alignment": "left",
            "segments": [
                {
                    "type": "text",
                    "style": "plain",
                    "foreground": "#007ACC",
                    "template": "âžœ "
                }
            ],
            "newline": true
        }
    ]
}
