	"Serialized Variable": {
		"body": "[SerializeField] private $type $_variable;",
		"prefix": "Ser",
		"description": "Creating serialized field."
	},
	"Debug Log": {
		"body": "Debug.Log($\"$message\");",
		"prefix": "log",
		"description": "Creating Debug.Log() statement."
	},
	"Debug Warning": {
		"body": "Debug.LogWarning($\"$message\");",
		"prefix": "logw",
		"description": "Creating Debug.Log() statement."
	},
	"Debug Error": {
		"body": "Debug.LogError($\"$message\");",
		"prefix": "loge",
		"description": "Creating Debug.Log() statement."
	}
